@model MortyShop_MVC.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="container">
        <label class="infoMessage">@TempData["message"]</label>
    </div>
}

<div class="container" style="margin-top:0">
    <div class="title">
        Morty Shop – Hayranlar İçin Resmi Rick and Morty Ürünleri
    </div>
    <div class="subtitle">
        İçinizdeki maceraperesti özgür bırakın ve efsanevi Rick ve Morty ruhunu doğrudan gardırobunuza taşıyan özel, akıl uçuran tasarımlarımızla tanışın.
    </div>
    <div class="content">
        <div class="categories"> @Html.Partial("_MainCategories")</div>
    </div>
</div>

<div class="container">
    <div class="title">
        En Son Eklenen Rick And Morty Tasarımları
    </div>
    <div class="content">
        <div class="products">
            @Html.Partial("_NewProducts", Model.NewProducts)
        </div>
    </div>
</div>

<div class="container">
    <div class="title">
        Sizin İçin Seçtiğimiz Bu Ayın En İyileri
    </div>
    <div class="content">
        <div class="products">
            @Html.Partial("_MonthlyPicks", Model.NewProducts)
        </div>
    </div>
</div>